<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Imagem</th>
      <th>Descrição</th>
      <th>Promoção</th>
      <th>Preço</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <th scope="row"><%= ad.id %></th>
        <td><%= image_tag(ad.picture.variant(resize_to_limit: [100, 100])) %></td>
        <td><%= ad.description %></td>
        <td><%= true %></td>
        <td><%= humanized_money_with_symbol(ad.price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>